@model LoginViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> signinManager

<div class="row offset-md-1 mb-xxl-5 mt-xxl-5 test">
    <h1 class="text-primary text-center pt-2 h1-test">Log in</h1>
    <form method="post" asp-controller="auth" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" class="signInForm">
        <div class="row border p-2 rounded-5 mb-5 formContainer" style="height: 100%;">
            <div class="col-lg-6">
                <img src="~/pics/pngtree-comicstyle-login-icon-with-password-access-on-white-background-vector-png-image_12861189.png" alt="Alternate Text" class="w-100 h-100" />
            </div>
            <div class="col-lg-6 mt-5">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="form-group singInEmail">
                    @* <label asp-for="Email" class="col-12"></label> *@
                        <div class="form-floating col-md-12 emailInput">
                            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                            <label for="floatingInput">Email address</label>
                        </div>
                        @* <input asp-for="Email" class="form-control"/> *@
                        <span asp-validation-for="Email" class="text-danger fw-bold"></span>
                </div>
            
                <div class="form-group signInPassword">
                    @* <label asp-for="Password" class="col-12"></label> *@
                        <div class="form-floating col-md-12 passwordInput">
                            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                        @* <input asp-for="Password" class="form-control"/> *@
                        <span asp-validation-for="Password" class="text-danger" style="font-weight: bold;"></span>
                </div>
                <div class="form-group pt-2 text-center">
                    <div class="col-md-12">
                        <div class="custom-checkbox">
                            <label>
                                <input asp-for="RememberMe" />
                                Remember me
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group pt-3" style="height: 70%;">
                    <div class="col-md-12">
                        <button class="btn btn-success form-control rounded-pill" type="submit">
                            Login
                        </button>
                    </div>
                        <form asp-controller="Auth" asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">

                    <p class="text-center mt-4 fs-4 fw-bold">Or Sign In With</p>
                    <div class="text-center mt-4">
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/Facebook_Logo_2023.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/lalala.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                    </div>
                    </form>
                    <div class="row mt-xxl-5 mb-0 optionsContainer">
                        <div class="col-6 ps-0" style="height: 100%;">
                            <a asp-action="Register" class="" style="width:fit-content;height:fit-content;">New Account</a>
                        </div>
                        <div class="col-6 text-end pe-xxl-4">
                            <a asp-action="ForgotPassword">Forgot password</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
