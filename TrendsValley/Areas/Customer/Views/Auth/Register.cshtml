@model RegisterViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> signinManager
<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2"> Register</h1>
    <form class="mb-lg-5" method="post" asp-controller="auth" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="row border p-2 rounded register " style="width:fit-content;">
            <p class="text-center fs-5 fw-bold" style="color: #04AA6D">Create a new account</p>
            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@

            <div class="col-lg-6">
                <img src="~/pics/b7b138495126b90b35855af28716a610.jpg" alt="Alternate Text" class="img-fluid" style="height: 80vh; width: 100%;"/>
            </div>
            <div class="col-lg-6">
                <div class="row mb-3">
                    <div class="form-floating col-md-6 textInput">
                        <input asp-for="appUser.Fname" type="text" class="form-control me-5" id="floatingInput" placeholder="name@example.com">
                        <label class="ps-4" for="floatingInput">First Name</label>
                            <span asp-validation-for="appUser.Fname" class="text-danger fw-bold"></span>
                    </div>
                    <div class="form-floating col-md-6 textInput">
                        <input asp-for="appUser.Lname" type="text" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label class="ps-4" for="floatingInput">Last Name</label>
                            <span asp-validation-for="appUser.Lname" class="text-danger fw-bold"></span>
                    </div>
                </div>
                    @* <div class="form-group"> *@
                        @* <label class="col-12">First Name</label> *@
                        @* <div class="col-md-6"> *@
                        @*     <input asp-for="appUser.Fname" class="form-control" /> *@
                        @* </div> *@
                    @* <div class="form-group"> *@
                        @* <label class="col-12">Last Name</label> *@
                        @* <div class="col-md-6"> *@
                        @*     <input asp-for="appUser.Lname" class="form-control d-inline-block" /> *@
                        @* </div> *@
                    @* </div> *@
                    @* </div> *@

                <div class="form-group">
                    @* <label asp-for="appUser.Email" class="col-12"></label> *@
                    <div class="col-md-12">
                        @* <input asp-for="appUser.Email" class="form-control" /> *@
                        <div class="form-floating col-md-12 emailInput">
                            <input asp-for="appUser.Email" type="email" class="form-control firstName" id="floatingInput" placeholder="name@example.com">
                            <label class="" for="floatingInput">Email</label>
                            <span asp-validation-for="appUser.Email" class="text-danger fw-bold"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-0">
                    <div class="form-floating col-md-6 passwordInput">
                        <input asp-for="Password" type="password" class="form-control me-5" id="floatingInput" placeholder="name@example.com">
                        <label class="ps-4" for="floatingInput">Password</label>
                        <span asp-validation-for="Password" class="text-danger fw-bold"></span>
                    </div>
                    <div class="form-floating col-md-6 passowrdInput">
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInput" placeholder="name@example.com">
                        <label class="ps-4" for="floatingInput">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger fw-bold"></span>
                    </div>
                </div>
                @* <div class="form-group row"> *@
                @*     <label asp-for="Password" class="col-lg-12"></label> *@
                @*     <div class="col-lg-6"> *@
                @*         <input asp-for="Password" class="form-control" /> *@
                @*         <span asp-validation-for="Password" class="text-danger"></span> *@
                @*     </div> *@
                @* <div class="form-group"> *@
                    @* <label asp-for="ConfirmPassword" class="col-lg-12"></label> *@
                    @* <div class="col-lg-6"> *@
                    @*     <input asp-for="ConfirmPassword" class="form-control" /> *@
                    @*     <span asp-validation-for="ConfirmPassword" class="text-danger"></span> *@
                    @* </div> *@
                @* </div> *@
                @* </div> *@
                <div class="form-group mb-3">
                     @* <label class="col-12">State List</label> *@
                     <select asp-for="appUser.StateId" class="form-select" asp-items="@Model.Statelist">
                         <option disabled selected>--Select State--</option>
                     </select>
                     <span asp-validation-for="appUser.StateId" class="text-danger fw-bold"></span>
                 </div>
                <div class="form-group">
                    @* <label class="col-12">City List</label> *@
                    <select asp-for="appUser.CityId" class="form-select" asp-items="@Model.CityList">
                        <option disabled selected>--Select City--</option>
                    <span asp-validation-for="appUser.CityId" class="text-danger fw-bold"></span>
                    </select>
                </div>
                <div class="form-group mt-3">
                    @* <label asp-for="appUser.PostalCode" class="col-12"></label> *@
                    <div class="col-md-12">
                        @* <input asp-for="appUser.PostalCode" class="form-control" /> *@
                        <div class="form-floating col-md-12 passwordInput">
                            <input asp-for="appUser.PostalCode" type="number" class="form-control me-5" id="floatingInput" placeholder="name@example.com">
                            <label class="ps-3" for="floatingInput">Postal Code</label>
                        <span asp-validation-for="appUser.PostalCode" class="text-danger fw-bold"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @* <label asp-for="appUser.PhoneNumber" class="col-12"></label> *@
                    <div class="col-md-12">
                        @* <input asp-for="appUser.PhoneNumber" class="form-control" /> *@
                        <div class="form-floating col-md-12 passwordInput">
                            <input asp-for="appUser.PostalCode" type="number" class="form-control me-5" id="floatingInput" placeholder="name@example.com">
                            <label class="ps-3" for="floatingInput">Phone Number</label>
                            <span asp-validation-for="appUser.PhoneNumber" class="text-danger fw-bold"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @* <label asp-for="appUser.StreetAddress" class="col-12"></label> *@
                    <div class="col-md-12">
                        @* <input asp-for="appUser.StreetAddress" class="form-control" /> *@
                        <div class="form-floating col-md-12 passwordInput">
                            <input asp-for="appUser.StreetAddress" type="text" class="form-control me-5" id="floatingInput" placeholder="name@example.com">
                            <label class="ps-3" for="floatingInput">Street Address</label>
                            <span asp-validation-for="appUser.StreetAddress" class="text-danger fw-bold"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group pt-3">

                    <div class="col-md-6" style="width: 100%;">
                        <button class="btn btn-success form-control registerButton" type="submit" style="width: 100%;">
                            Register
                        </button>
                    </div>
                    <p class="text-center mt-4 fs-4 fw-bold">Or Sign In With</p>
                    <div class="text-center mt-4">
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/Facebook_Logo_2023.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                        <span class="me-2">
                            <button class="registerSignInBrands">
                                <img src="~/pics/lalala.png" alt="Alternate Text" class="signInLogos" />
                            </button>
                        </span>
                    </div>
                </div>

            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}