@model IEnumerable<TrendsValley.Models.Models.Product>
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
</head>
<body>
    <!-- Filter -->
    <div class="container-fluid">
        <h1> Filter </h1>
        <div class="row">
            <div class="col-lg-2 col-md-12">
                <!-- Accordion -->
                <div class="accordion" id="accordionPanelsStayOpenExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                Type
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                            <div class="accordion-body">
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> T-shirt </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Jackets </p>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                                Size
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Small </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Medium </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Large </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> x-Large </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> xx-Large </p>
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                                Material
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Cotton </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Anything </p>
                                <br />
                                <input type="checkbox" name="name" value="" /> <p class="filter-checkbox-label"> Anything </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Accordion -->
            <!-- Filter -->
            <!-- Products -->
            <div class="col-lg-10 col-md-12">
                <!-- First Row-->
                <div class="row">
                    <!--Start cards -->
                    <div class="col-lg-3">
                                @foreach (var product in Model)
                    {
                        <div class="card h-100">
                                <img src="@product.imgUrl" class="card-img-top" alt="@product.Product_Name">
                            <div class="card-body cards">
                                <p class="company">@product.Product_Brand</p>
                                <h5 class="card-title description">@product.Product_Name</h5>
                                <!-- Stars -->
                                <div class="rating">
                                    <!--1st Star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16" c>
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" class="star" />
                                    </svg>
                                    <!--2nd Star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" class="star" />
                                    </svg>
                                    <!--3rd Star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" class="star" />
                                    </svg>
                                    <!--4th Star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" class="star" />
                                    </svg>
                                    <!--5th Star -->
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" class="star" />
                                    </svg>
                                </div>
                                <!-- Stars -->
                                <div class="row">
                                    <div class="col col-price">
                                        <p class="card-text price">@product.Product_Price</p>
                                    </div>
                                    <div class="col col-button">
                                        <a href="#">
                                            <p class="btn btn-primary buy-button">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                                                </svg>
                                            </p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    </div>
                    <!--End cards -->
                </div>
                <!-- Second Row-->
            </div>
            <!-- Products -->
            
        </div>
    </div>
</body>
</html>
